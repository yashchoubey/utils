DELETE haikuinfo

PUT haikuinfo
{
  "settings": {
    "analysis": {
      "analyzer": {
        "english_exact": {
          "tokenizer": "standard",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "haikutext": {
        "type": "text",
        "analyzer": "english",
        "fields": {
          "exact": {
            "type": "text",
            "analyzer": "english_exact"
          }
        }
      },
      "lastUpdatedTime":{
        "type":"long"
      },
      "id":{
        "type":"text"
      }
    }
  }
}

PUT haikuinfo/_doc/1
{
  "haikutext": "test haiku",
  "lastUpdatedTime":11,
  "id":"1"
}

