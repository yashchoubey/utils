DELETE haikuinfo



DELETE stemminganalyzertest

GET /haiku/_search
{
  "query": {
    "match": {"text":{"query":"sky"}}
  }
}

PUT /stemminganalyzertest
{
    "settings": {
        "analysis" : {
            "analyzer" : {
                "englishstemmeranalyzer" : {
                    "tokenizer" : "standard",
                    "filter" : ["lowercase", "english_stemmer"]
                }
            },
            "filter" : {
                "english_stemmer" : {
                    "type" : "stemmer",
                    "name" : "english"
                }
            }
        }
    }
}

PUT haiku


POST /haiku/_doc
{"text":"sky"}

POST /haiku/_doc
{"text":"skies"}

POST /haiku/_doc
{"text":"skys"}

PUT index_4_analysis
{
   "settings": {
      "analysis": {
         "analyzer": {
            "my_english_analyzer": {
               "type": "standard",
               "max_token_length": 5,
               "stopwords": "_english_"
            }
         }
      }
   }
}


POST index_4_analysis/_analyze
{
   "analyzer": "my_english_analyzer",
   "text": "Today's weather is beautiful"
}




