POST haikuinfo/_refresh

GET haikuinfo/_search
{
  "query": {
    "simple_query_string": {
      "fields": [ "haikutext"],
      "query": "tested"
    }
  },
  "sort": [
      {
        "lastUpdatedTime": {
          "order": "desc"
        }
      }
    ]
}

